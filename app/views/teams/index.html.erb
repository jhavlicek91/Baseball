<%= stylesheet_link_tag  'teams', media: 'all', 'data-turbolinks-track' => true %>

<div class="container">
	<div class="row team-header-info">
		<div class="col-md-2"><%= image_tag @image_url %></div>
		<div class="col-md-4">
			<h2><%= @team.city.name + " " + @team.name %></h2>
			<div class="division-place">
				<%= @team.place + " in " + @team.division.conference.abbreviation + " " + @team.division.name %>
			</div>
		</div>
		<div class="col-md-6" style="margin-top: 35px">
			<div class="container">
				<div class="col-md-4 pull-left">
					<div class="record"><%= @team.team_record %></div>
					<div class="team-recent-info">Record</div>
				</div>
				<div class="col-md-4 pull-left">
					<div class="last-ten"><%= @team.last_ten %></div>
					<div class="team-recent-info">Last Ten</div>
				</div>
				<div class="col-md-4 pull-left">
					<div class="streak"><%= @team.streak %></div>
					<div class="team-recent-info">Streak</div>
				</div>											
			</div>
		</div>
	</div>
	<h3>News</h3>
	<div class="news-container" data-id=<%= @team.id %> />

</div>

<script type="text/javascript">
	$('document').ready(function() {		
		teamPage({
			id: <%= @team.id %>,
			primaryColor: '<%= @team.primaryColor %>',
			secondaryColor: '<%= @team.secondaryColor %>',
			rssFeedId: '<%= @team.rssFeedId %>',
			league: '<%= @team.division.conference.league.abbreviation %>'
		});
	});
</script>